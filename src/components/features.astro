---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Free POS",
    description: "Accept payments from your customers with $0 fees. We have an escrow option available for new customers also.",
    icon: "openmoji:credit-card",
  },
  {
    title: "Blockchain Patent",
    description: "Before you upload an image or video to social media we will tokenize it for you to own and sell to your customers in exchange for your services.",
    icon: "fxemoji:lock",
  },
  {
    title: "Social Media AR Filters",
    description: "We create branded social media AR Filters on TikTok, Instagram and Facebook to allow your customers to market your brand for a discount of service.",
    icon: "icon-park:camera",
  },
  {
    title: "Live Stream",
    description: "Schedule a live audio event for your barbershop or hair salon hosted by your customer or guests. Generate new clients who want to stay tapped in.",
    icon: "fxemoji:studiomic",
  },
  {
    title: "Level Up",
    description: "We're launching in ATL 5D and scaling around the world. Every post made you earn your points on our Hair Show leaderboard. Become #1 in your city.",
    icon: "noto:level-slider",
  },
  {
    title: "@AHAIRSHOW IG",
    description: "Our Instagram channel highlights community content, live events, and exclusive sales. Leverage our 20k followers and let's grow as one united tribe.",
    icon: "noto:barber-pole",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    <span class="text-primary">Arvrtise</span> provides entrepenuers with all of
    the marketing tools they need take your business to the metaverse.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
