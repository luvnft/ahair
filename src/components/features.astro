---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Hairverse",
    description: "Network, promote your brand and host events in our Hairverse metaverse. Home of our future upcoming metaverse award shows",
    icon:"noto:sparkles",
  },
  {
    title: "Accept Crypto",
    description: "Hair Master tier Discord subscribers receive a custom <a href="https://haircolorvet.arvrtise.link">Solana POS link</a> to accpet $SOL money with $0 middleman fees.",
    icon: "ðŸª™",
  },
  {
    title: "Social Media AR Filters",
    description: "We create branded social media AR Filters on TikTok, Instagram and Facebook to allow your customers to market your brand for a discount of service.",
    icon: "icon-park:camera",
  },
  {
    title: "Live Stream",
    description: "Schedule a live Discord audio event or livestream on our @ahairshow in front of our 26.5k instagram followers. Generate new clients who want to stay tapped in.",
    icon: "fxemoji:studiomic",
  },
