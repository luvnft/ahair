---
import { Image } from "astro:assets";
import ContentSection from "~/components/content-section.astro";
import hairverseImage from "~/assets/hairverse.jpg";

const widths = [800, 1200, 1600];
const sizes = "(min-width: 1024px) 80vw, 90vw";
---

<ContentSection title="HairVerse" id="compatibility">
  <Fragment slot="lead">
    The first metaverse built exclusively for hair professionals. Network, showcase your work, and grow your clientele in immersive 3D spaces.
  </Fragment>
  
  <div class="max-w-4xl mx-auto">
    <!-- Clickable 16:9 Image Container -->
    <a 
      href="https://www.spatial.io/s/Hairverse-63a2cfa4d49a590001d7d5fb?share=1273140408900528653"
      target="_blank"
      class="block group relative overflow-hidden rounded-lg bg-gray-900 aspect-video mb-6 hover:shadow-2xl transition-all duration-300"
    >
      <!-- Imported Hairverse Image -->
      <Image
        src={hairverseImage}
        widths={widths}
        sizes={sizes}
        alt="HairVerse Metaverse Preview"
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="eager"
      />
      <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-10 transition-all duration-300"></div>
      
      <!-- H1 Overlay -->
      <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-6xl md:text-8xl font-bold text-white text-center drop-shadow-2xl">
          ENTER
        </h1>
      </div>
    </a>
  </div>
</ContentSection>